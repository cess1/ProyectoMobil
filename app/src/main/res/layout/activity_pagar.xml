<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".PagarActivity"
    android:orientation="vertical"
    android:background="@color/tres">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formulario de Pago"
        android:textSize="40dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/editDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNombre"
        android:layout_marginTop="8dp"
        android:hint="Dirección"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/editTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDireccion"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:hint="Número de tarjeta de crédito"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTarjeta"
        android:layout_marginBottom="20dp"
        android:text="Pagar"
        android:background="@color/dos"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPagar"
        android:text="Salir"
        android:background="@color/light_grey"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"/>


</LinearLayout>