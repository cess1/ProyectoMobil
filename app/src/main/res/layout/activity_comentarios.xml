<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MappkiiREST.Comentarios"
    android:background="@color/tres">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentarios"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/black"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/light_grey"/>

    <EditText
        android:id="@+id/editTextComentario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Escribe tus comentarios aquÃ­"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextComentario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="30dp">

        <Button
            android:id="@+id/btnEnviarComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enviar Comentario"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:background="@color/dos"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnRegresarComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:background="@color/light_grey"
            android:textSize="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
